<div class="block block-themed block-last">
  <div class="block-title">
    <h4>General Form Elements &amp; Components</h4>
  </div>
  <div class="block-content">
    <h4 class="sub-header">基本数据</h4>
    <%= form_for(@product, html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group">
      <%= f.label :name, "药品名称", class: "control-label col-md-2" %>
      <div class="col-md-3">
        <%= f.text_field :name, class: "form-control" %>
        <span class="help-block">填写药品的完整名称</span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :factory, "生产厂家", class: "control-label col-md-2" %>
      <div class="col-md-3">
       <%= f.text_field :factory, class: "form-control" %>
        <span class="help-block">生产厂家的全称</span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :spec, "规格", class: "control-label col-md-2" %>
      <div class="col-md-3">
       <%= f.text_field :spec, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :shortname, "助记", class: "control-label col-md-2" %>
      <div class="col-md-3">
        <%= f.text_field :shortname, class: "form-control", placeholder: "助记名称..." %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :shortcode, class: "form-control", placeholder: "助记代码..." %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :bid_price, "价格", class: "control-label col-md-2" %>
      <div class="col-md-3">
        <%= f.text_field :bid_price, class: "form-control", placeholder: "结算价..." %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :final_price, class: "form-control", placeholder: "挂网价..." %>
      </div>
    </div>
    <div class="form-group">
     <%= f.label :intro, "药品简介", class: "control-label col-md-2" %>
      <div class="col-md-6">
        <%= f.text_area :intro, class: "form-control", size: "6x6", placeholder: "..." %>
      </div>
    </div>
    <div class="form-group form-actions">
      <div class="col-md-10 col-md-offset-2">
        <button type="reset" class="btn btn-danger"><i class="icon-repeat"></i> 重置</button>
        <button type="submit" class="btn btn-success"><i class="icon-ok"></i> 提交</button>
      </div>
    </div>
    <% end %>
    <h4 class="sub-header">上传模板数据</h4>
    <%= form_tag import_products_path, multipart: true, class: "form-horizontal" do %>
    <div class="form-group">
      <label class="control-label col-md-2" for="file">目标数据模板</label>
      <div class="col-md-4">
        <%= file_field_tag :file, class: "form-control" %>
      </div>
    </div>  
    <div class="form-group form-actions">
      <div class="col-md-10 col-md-offset-2">
        <button type="submit" class="btn btn-success"><i class="icon-cloud-upload"></i> 上传</button>
      </div>
    </div>
    <% end %>
  </div>
</div>
