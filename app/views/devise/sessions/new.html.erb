<div class="form-signin">
	<h3>Sign in to Your Account</h3>
	<!-- Row -->
	<div class="row-fluid row-merge">
		<!-- Column -->
		<div class="span7">
			<div class="inner">		
			<!-- Form -->
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

					<%= f.label :login, "用户名/邮箱地址:", :class => "strong" %>
					<%= f.text_field :login, :autofocus => true, :class => "input-block-level", :placeholder => "输入用户名或者邮箱..." %>
					
					<label class="strong">输入您的密码: <a class="password" href="<%= new_user_password_path %>">忘记密码?</a></label>
					<%= f.password_field :password, :autofocus => true, :class => "input-block-level", :placeholder => "输入密码..." %>

				    <% if devise_mapping.rememberable? -%>
				      <div class="uniformjs"><%= f.check_box :remember_me %> 二周免登陆 </div>
				    <% end -%>
					</br>
					<div class="row-fluid">
						<div class="span5 center">
							<%= f.submit "登  录", class: "btn btn-block btn-primary" %>
						</div>
						<div class="span2 center">或者</div>
						<div class="span5 center">
							<%= link_to "注册一个账号", new_user_registration_path, class: "btn btn-block btn-info" %>
						</div>
					</div>
				<% end %>
				<!-- // Form END -->
			</div>
		</div>
		<!-- // Column END -->

		<!-- Column -->

		<div class="span5">

			<div class="inner center">

				<p>Alternatively</p>

				<a href="index.html?lang=en" class="btn btn-icon-stacked btn-block btn-facebook glyphicons facebook"><i></i><span>Join using your</span><span class="strong">Facebook Account</span></a>

				<p>or</p>

				<a href="index.html?lang=en" class="btn btn-icon-stacked btn-block btn-google glyphicons google_plus"><i></i><span>Join using your</span><span class="strong">Google Account</span></a>

				<p>Having troubles? <a href="faq.html?lang=en">Get Help</a></p>

			</div>

		</div>

		<!-- // Column END -->

	</div>

	<!-- // Row END -->	

	<div class="ribbon-wrapper"><div class="ribbon primary">members</div></div>

</div>
